{
  "manifest_version": 3,
  "name": "AZ Problem Tracker", 
  "version": "0.1",  
  "author": "Naveen Kumar",
  "description": "A chrome extension that helps us to track probkems on AZ platform",
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://maang.in/*"
      ],
      "js": [
        "content.js"
      ]
    } 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources" : [
    {
      "resources": ["assets/delete.png" , "assets/play.png"],
      "matches" : ["<all_urls>"]
    },
    {
      "resources": ["assets/bookmark.png" , "assets/delete.png" , "assets/play.png", "assets/save.png"],
      "matches" : ["https://maang.in/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_popup": "index.html",
    "default_title": "AZ Problem Tracker"
  }
}
